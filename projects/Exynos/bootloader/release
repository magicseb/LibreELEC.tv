mkdir -p $RELEASE_DIR/3rdparty/bootloader
  LINUX_DTS_DIR=$(get_build_dir linux)/arch/$TARGET_KERNEL_ARCH/boot/dts
  for dtb in $LINUX_DTS_DIR/*.dtb $LINUX_DTS_DIR/*/*.dtb; do
    if [ -f $dtb ]; then
      cp -a $dtb $RELEASE_DIR/3rdparty/bootloader
    fi
  done
