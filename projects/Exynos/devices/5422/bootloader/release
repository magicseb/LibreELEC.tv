mkdir -p $RELEASE_DIR/3rdparty/bootloader
  if [ -n "$UBOOT_SYSTEM" ]; then
    BOOTLOADER_DIR=$(get_build_dir $BOOTLOADER)
    if [ -f $BOOTLOADER_DIR/bl1.bin ]; then
      cp -a $BOOTLOADER_DIR/bl1.bin $RELEASE_DIR/3rdparty/bootloader
    fi
    if [ -f $BOOTLOADER_DIR/bl2.bin ]; then
      cp -a $BOOTLOADER_DIR/bl2.bin $RELEASE_DIR/3rdparty/bootloader
    fi
    if [ -f $BOOTLOADER_DIR/u-boot-dtb.bin ]; then
      cp -a $BOOTLOADER_DIR/u-boot-dtb.bin $RELEASE_DIR/3rdparty/bootloader/u-boot.bin
    fi
    if [ -f $BOOTLOADER_DIR/tzsw.bin ]; then
      cp -a $BOOTLOADER_DIR/tzsw.bin $RELEASE_DIR/3rdparty/bootloader
    fi
  fi

  LINUX_DTS_DIR=$(get_build_dir linux)/arch/$TARGET_KERNEL_ARCH/boot/dts
  for dtb in $LINUX_DTS_DIR/*.dtb $LINUX_DTS_DIR/*/*.dtb; do
    if [ -f $dtb ]; then
      cp -a $dtb $RELEASE_DIR/3rdparty/bootloader
    fi
  done
